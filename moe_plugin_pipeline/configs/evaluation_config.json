{
    "name": "MoE-Plugin_Evaluation",
    "dataset": {
        "name": "CIFAR-100-LT",
        "data_dir": "./data/CIFAR-100",
        "imbalance_ratio": 100
    },
    "group_definition": {
        "tail_threshold": 20,
        "head_threshold": 100
    },
    "evaluation": {
        "cost_values": [0.0, 0.05, 0.1, 0.15, 0.2, 0.25, 0.3, 0.35, 0.4, 0.45, 0.5, 0.55, 0.6, 0.65, 0.7, 0.75, 0.8, 0.85, 0.9, 0.95, 1.0],
        "metrics": ["balanced_error", "worst_group_error", "rejection_rate"],
        "baselines": ["BalPoE", "Plugin_Single", "Plugin_BalPoE_avg", "MoE_Plugin"]
    },
    "output": {
        "save_dir": "results/evaluation",
        "plots": true,
        "tables": true,
        "detailed_results": true
    },
    "visualization": {
        "plot_size": [15, 6],
        "dpi": 300,
        "save_format": "png"
    }
}
